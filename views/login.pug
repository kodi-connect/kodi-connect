extends layout.pug

block head
  title Kodi Connect - Login

block content
  h1 Login
  if error
    p Error: #{error}
  form(method='POST' action='/login')
    div.pt-form-group.pt-inline
      div.pt-form-content
        div.pt-input-group
          span.pt-icon.pt-icon-user
          input.pt-input(type='text' id='email' placeholder='Email' name='email' value='')
    div.pt-form-group.pt-inline
      div.pt-form-content
        div.pt-input-group
          span.pt-icon.pt-icon-key
          input.pt-input(type='password' id='password' placeholder='Password' name='password' value='')

    input(type='hidden' name='state' value=state)
    input(type='hidden' name='response_type' value=response_type)
    input(type='hidden' name='redirect' value=redirect)
    input(type='hidden' name='client_id' value=client_id)
    input(type='hidden' name='redirect_uri' value=redirect_uri)
    button.pt-button(type='submit') Log in

  a(href="/register") Register
